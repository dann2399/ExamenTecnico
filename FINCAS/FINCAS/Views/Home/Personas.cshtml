@model List<FINCAS.Models.Persona_Asociada>

@{
    ViewData["Title"] = "Personas";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table">
    <thead>
        <tr>
            <th>Codigo</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Parentesco</th>
            <th>Id Finca</th>
            <th>Propietaria</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var personas in Model)
        {

            <tr>
                <td>@personas.Codigo</td>
                <td>@personas.Nombres</td>
                <td>@personas.Apellidos</td>
                <td>@personas.Parentesco</td>
                <td>@personas.Id_Finca</td>
                <td>@personas.Propietaria</td>
            </tr>
        }
    </tbody>
</table>